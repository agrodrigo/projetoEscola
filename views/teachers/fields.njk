<div class="item">
            <div>Avatar URL</div>
            <div>
                <input 
                    type="url"
                    name="avatar_url"
                    placeholder="http://"
                    value="{{teacher.avatar_url}}"
                    >
            </div>
        </div>

        <div class="item">
            <div>Nome completo</div>
            <div>
                <input 
                    type="text"
                    name="name"
                    placeholder="Nome completo do professor"
                    value="{{teacher.name}}"
                    >
            </div>
        </div>

        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input 
                    type="date" 
                    name="birth"
                    value="{{teacher.birth}}"
                    >
            </div>
        </div>

        <div class="item">
            <div>Grau de escolaridade</div>
            <div>
                <select name="educational_level">
                    <option value="medio" {% if teacher.educational_level == 'medio' %} selected {% endif %}>Ensino Médio</option>
                    <option value="superior" {% if teacher.educational_level == 'superior' %} selected {% endif %}>Ensino Superior Completo</option>
                    <option value="pos" {% if teacher.educational_level == 'pos' %} selected {% endif %}>Mestrado e Doutorado</option>
                </select>
            </div>
        </div>

        <div class="item">
            <div>Tipo de Aula</div>
            <div>
                <span> 
                    <input 
                        type="radio" 
                        name="type_class" 
                        value="presential" 
                        {% if teacher.type_class == 'presential' %}
                            checked
                        {% endif %}>
                            Presencial
                </span>
                <span> 
                    <input 
                        type="radio" 
                        name="type_class" 
                        value="remotely" 
                        {% if teacher.type_class == 'remotely' %}
                            checked
                        {% endif %}>
                            À Distância
                </span>
            </div>
        </div>

        <div class="item">
            <div>Área de Atuação</div>
            <div>
                <input
                    type="text"
                    name="services"
                    placeholder="Separe a área de atuação por vírgula..."
                    value = "{{teacher.services}}"
                    >
            </div>
        </div>

        <button type="submit">Salvar</button>