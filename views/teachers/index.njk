{% extends 'layout.njk' %}

{% block content %}

<div class="card table-container">
    <a href="/teachers/create">Novo</a>
    <table width="100%">
        <thead>
            <tr>
                <th>Avatar</th>
                <th>Professor</th>
                <th>Acompanhamento</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {% for teacher in teachers %}
                <tr>
                    <td><img src="{{teacher.avatar_url}}" alt=""></td>
                    <td>{{teacher.name}}</td>
                    <td>                        
                        {% for service in teacher.services %}                      
                            <span>{{service}}</span>
                        {% endfor %}
                    </td>
                    <td><a href="/teachers/{{teacher.id}}">Ver</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

</div>

{% endblock content %}